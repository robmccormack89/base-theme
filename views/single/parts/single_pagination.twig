<ul class="uk-child-width-1-2" uk-grid>

  {# left button: newer posts #}
  <li class="prev-article uk-text-left">
    {% if post.next %}
      <a href="{{ post.next.link|e('esc_url') }}" class="uk-link-reset uk-animation-toggle">
        <div class="uk-text-emphasis">
          <span class="uk-animation-slide-right-small" uk-icon="arrow-left"></span> {{ _x('Newer article', 'Single: pagination', 'base-theme')|e('esc_html') }}
        </div>
        <div class="uk-text-small uk-text-meta uk-text-truncate uk-visible@m">{{ post.next.title|e('esc_html') }}</div>
      </a>
    {% endif %}
  </li>

  {# right button: older posts #}
  <li class="next-article uk-text-right">
    {% if post.prev %}
      <a href="{{ post.prev.link|e('esc_url') }}" class="uk-link-reset uk-animation-toggle">
        <div class="uk-text-emphasis">
          {{ _x('Older article', 'Single: pagination', 'base-theme')|e('esc_html') }} <span class="uk-animation-slide-left-small" uk-icon="arrow-right"></span>
        </div>
        <div class="uk-text-small uk-text-meta uk-text-truncate uk-visible@m">{{ post.prev.title|e('esc_html') }}</div>
      </a>
    {% endif %}
  </li>

</ul>