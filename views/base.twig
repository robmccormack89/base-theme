{% block html_head_container %}

  {% include '_html-head.twig' %}
    {% block styles %}
    {% endblock %}
  </head>
  {% endblock %}

  <body class="{{ body_class }} {{ (configs.animated_preloader) ? 'no-overflow' : 'no-preloader' }}" data-template="base.twig">

    {% if configs.animated_preloader %}
      <div id="Preloader" class="preloader"></div>
    {% endif %}

    {% block header %}
      {% include 'header.twig' %}
    {% endblock %}

    {# this acts as the base for all templates including 404s #}
    <main id="Main" role="main">
      <div id="ContentSection">
        {% block main %}
          <div class="uk-section uk-container uk-container-xsmall">

            {# main title #}
            {% if title or archive.title or post.title %}
              <h1>{{ title|default(archive.title|default('post.title'))|e('esc_html') }}</h1>
            {% endif %}

            {# main description or message #}
            <p>{{ description|default(archive.description|default(post.description|default(__('Sorry, nothing to display here....', 'base-theme'))))|e('esc_html') }}</p>

            {# if it's a 404, include the search form #}
            {% include (fn('is_404') or fn('get_post_status', post.id) == 'private') ? '_search-form.twig' ignore missing  %}

          </div>
        {% endblock %}
      </div>
    </main>

    {% block footer %}
      {% include 'footer.twig' %}
    {% endblock %}

    {{ fn('wp_footer') }}

    {% block scripts %}
    {% endblock %}

    {% if configs.animated_preloader %}
      <script type='text/javascript'>
        document.body.addEventListener("load", preloadMe());
      </script>
    {% endif %}

  </body>

</html>
