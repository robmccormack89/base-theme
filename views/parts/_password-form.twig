{# password protected message #}
<p class="{{ (small != true) ? 'uk-text-lead' }}">{{ _x('This content is password protected. To view it please enter your password below:', 'Password protected content', 'base-theme')|e('esc_html') }}</p>

<form class="password-form uk-width-large" action="{{ site.site_url|e('esc_url') }}/wp-login.php?action=postpass" method="post">
  <ul class="uk-grid-collapse uk-flex uk-flex-middle" uk-grid>
    
    {# label: hidden for now #}
    <li class="uk-width-auto uk-visible@m" hidden>
      <label for="pwbox-{{ post.id|e('esc_html') }}" class="uk-form-label">{{ _x('Password', 'Password protected content', 'base-theme')|e('esc_html') }}:</label>
    </li>
    
    {# password input #}
    <li class="{{ (small == true) ? 'uk-width-auto' : 'uk-width-expand' }}">
      <input class="uk-input {{ (small == true) ? 'uk-form-width-medium uk-form-small' : 'uk-width-expand' }}" name="post_password" id="pwbox-{{ post.id|e('esc_html') }}" type="password" placeholder="{{ _x('Password', 'Password protected content', 'base-theme')|e('esc_html') }}" size="20" maxlength="20" />
    </li>
    
    {# submit button #}
    <li class="uk-width-auto">
      <input class="uk-button uk-button-primary {{ (small == true) ? 'uk-button-small' }}" type="submit" name="{{ _x('Enter', 'Password protected content', 'base-theme')|e('esc_html') }}" value="{{ _x('Enter', 'Password protected content', 'base-theme')|e('esc_html') }}" />
    </li>
    
  </ul>
</form>