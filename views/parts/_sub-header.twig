{% block page_header %}
  <header class="archive-header uk-container uk-container-small {{ (description) ? 'uk-margin-bottom' : 'uk-margin-medium-bottom' }}">
      
    {% block page_header_breads %}
      {% include '_breadcrumbs.twig' %}
    {% endblock %}

    {% block page_header_title %}
      <h1 class="uk-text-bold uk-heading-small uk-margin-remove">
        {{ title|e('esc_html') }}
      </h1>
    {% endblock %}
    
    {% block page_header_desc %}
      {% if description %}
        <p class="uk-text-lead uk-margin-remove-bottom">
          {{ description|e('esc_html') }}
        </p>
      {% endif %}
    {% endblock %}

  </header>
{% endblock %}